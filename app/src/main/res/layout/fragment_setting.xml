<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            android:text="@string/setting__app_version"
            app:font='@{"bold"}'
            android:textColor="@color/text__primary"
            android:textSize="@dimen/font_title_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />

        <ImageView
            android:id="@+id/notificationSettingImage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/notificationSettingTextViewDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/notificationSettingText"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/notificationSettingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            android:text="@string/setting__notification_setting"
            app:font='@{"bold"}'
            android:textColor="@color/text__primary"
            android:textSize="@dimen/font_title_size"
            app:layout_constraintEnd_toStartOf="@+id/privacyPolicyImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacyPolicyTextViewDesc" />

        <TextView
            android:id="@+id/cacheTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            android:text="@string/setting__cache_size"
            android:textColor="@color/text__primary"
            android:textSize="@dimen/font_title_size"
            app:font='@{"bold"}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificationSettingTextViewDesc" />

        <TextView
            android:id="@+id/clearCacheTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            android:text="@string/setting__clear_cache"
            android:textColor="@color/text__primary"
            android:textSize="@dimen/font_title_size"
            app:font='@{"bold"}'
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cacheValueTextViewDesc" />

        <TextView
            android:id="@+id/privacyPolicyTextview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            android:text="@string/setting__privacy_policy"
            app:font='@{"bold"}'
            android:textColor="@color/text__primary"
            android:textSize="@dimen/font_title_size"
            app:layout_constraintEnd_toStartOf="@+id/privacyPolicyImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/privacyPolicyImage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/privacyPolicyTextViewDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/privacyPolicyTextview"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/text__primary_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gdprTextView" />

        <TextView
            android:id="@+id/appVersionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            app:font='@{"normal"}'
            android:textColor="@color/text__primary"
            android:textSize="@dimen/font_body_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutText" />

        <TextView
            android:id="@+id/privacyPolicyTextViewDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:text="@string/setting__privacy_policy_desc"
            app:font='@{"normal"}'
            android:textColor="@color/text__primary_light"
            android:textSize="@dimen/font_body_s_size"
            app:layout_constraintEnd_toStartOf="@+id/privacyPolicyImage"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacyPolicyTextview" />

        <TextView
            android:id="@+id/notificationSettingTextViewDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:text="@string/setting__notification_setting_desc"
            app:font='@{"normal"}'
            android:textColor="@color/text__primary_light"
            android:textSize="@dimen/font_body_s_size"
            app:layout_constraintEnd_toEndOf="@+id/notificationSettingText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notificationSettingText" />

        <TextView
            android:id="@+id/cacheValueTextViewDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            android:text="@string/setting__cache_size"
            android:textColor="@color/text__primary"
            android:textSize="@dimen/font_body_s_size"
            app:font='@{"normal"}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cacheTextView" />

        <TextView
            android:id="@+id/gdprTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:padding="4dp"
            android:text="@string/setting__change_gdpr"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text__primary"
            android:textSize="@dimen/font_title_size"
            app:font='@{"bold"}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clearCacheTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>